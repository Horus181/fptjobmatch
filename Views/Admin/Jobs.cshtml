@model List<WebApplication2.Models.Job>

@{
    ViewData["Title"] = "Admin - Jobs";
    var q = (string?)ViewBag.Q;
    var onlyPending = (bool)(ViewBag.OnlyPending ?? false);
}

<div class="container mt-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <h2 class="mb-0">Manage Jobs</h2>
        <a asp-controller="Admin" asp-action="Applications" class="btn btn-outline-primary">
            View Applications
        </a>
    </div>

    <form class="card border-0 shadow-sm p-3 mb-3" method="get" asp-controller="Admin" asp-action="Jobs">
        <div class="row g-2 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Filter by employer email / username</label>
                <input name="q" value="@q" class="form-control" placeholder="e.g. hr@company.com or employerUser" />
            </div>
            <div class="col-md-3">
                <div class="form-check mt-4">
                    <input class="form-check-input" type="checkbox" name="onlyPending" value="true" @(onlyPending ? "checked" : "") />
                    <label class="form-check-label">Only pending (not approved)</label>
                </div>
            </div>
            <div class="col-md-3 text-md-end">
                <button class="btn btn-primary">Search</button>
                <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Jobs">Reset</a>
            </div>
        </div>
    </form>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No jobs found.</div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Employer</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var j in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@j.Title</td>
                                <td>@j.EmployerName</td>
                                <td>@j.Location</td>
                                <td>
                                    @if (j.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@j.Id" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

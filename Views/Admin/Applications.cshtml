@model List<WebApplication2.Models.JobApplication>
@using WebApplication2.Models

@{
    ViewData["Title"] = "Admin - Applications";
    var employerQ = (string?)ViewBag.EmployerQ;
    var seekerQ = (string?)ViewBag.SeekerQ;
}

<div class="container mt-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <h2 class="mb-0">Manage Applications</h2>
        <a asp-controller="Admin" asp-action="Jobs" class="btn btn-outline-secondary">
            Back to Jobs
        </a>
    </div>

    <form class="card border-0 shadow-sm p-3 mb-3" method="get" asp-controller="Admin" asp-action="Applications">
        <div class="row g-2 align-items-end">
            <div class="col-md-5">
                <label class="form-label">Filter by employer email / username</label>
                <input name="employerQ" value="@employerQ" class="form-control" placeholder="Employer email/username" />
            </div>
            <div class="col-md-5">
                <label class="form-label">Filter by jobseeker email / username</label>
                <input name="seekerQ" value="@seekerQ" class="form-control" placeholder="JobSeeker email/username" />
            </div>
            <div class="col-md-2 text-md-end">
                <button class="btn btn-primary w-100">Search</button>
            </div>
        </div>
        <div class="mt-2">
            <a class="btn btn-outline-secondary btn-sm" asp-controller="Admin" asp-action="Applications">Reset</a>
        </div>
    </form>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No applications found.</div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Applicant</th>
                            <th>Applicant Email</th>
                            <th>Job</th>
                            <th>Employer</th>
                            <th>Applied</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@a.ApplicantName</td>
                                <td>@a.ApplicantEmail</td>
                                <td>@a.Job?.Title</td>
                                <td>@a.Job?.EmployerName</td>
                                <td>@a.AppliedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @switch (a.Status)
                                    {
                                        case ApplicationStatus.Pending:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case ApplicationStatus.Approved:
                                            <span class="badge bg-success">Accepted</span>
                                            break;
                                        case ApplicationStatus.Rejected:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@a.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Admin"
                                       asp-action="ApplicationDetails"
                                       asp-route-id="@a.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        View Application
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@model WebApplication2.Models.EditUserRolesViewModel

@{
    ViewData["Title"] = "Edit user roles";
}

<div class="container mt-4">
    <h2>Edit roles for @Model.Email</h2>

    <form asp-action="EditUserRoles" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           asp-for="Roles[i].Selected" />
                    <label class="form-check-label" asp-for="Roles[i].Selected">
                        @Model.Roles[i].RoleName
                    </label>
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Users" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

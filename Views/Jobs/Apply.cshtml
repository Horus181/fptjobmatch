@model WebApplication2.Models.JobApplication

@{
    ViewData["Title"] = "Apply for Job";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <div class="d-flex align-items-start justify-content-between gap-2 mb-3">
                        <div>
                            <h3 class="card-title mb-1">Apply for this job</h3>
                            <p class="text-muted mb-0">
                                Fill in your information. The employer will review your application.
                            </p>
                        </div>
                        <span class="badge bg-light text-dark border">Job ID: @Model.JobId</span>
                    </div>

                    <hr class="my-3" />

                    <form asp-controller="Jobs" asp-action="Apply" method="post" id="applyForm">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="JobId" value="@Model.JobId" />

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="ApplicantName" class="form-label fw-semibold"></label>
                            <input asp-for="ApplicantName" class="form-control" autocomplete="name" required />
                            <span asp-validation-for="ApplicantName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ApplicantEmail" class="form-label fw-semibold"></label>
                            <input asp-for="ApplicantEmail" class="form-control" autocomplete="email" type="email" required />
                            <span asp-validation-for="ApplicantEmail" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Introduction" class="form-label fw-semibold"></label>
                            <textarea asp-for="Introduction"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Briefly describe your experience, skills and why you are a good fit for this role."
                                      maxlength="2000"
                                      required></textarea>
                            <div class="d-flex justify-content-between mt-1">
                                <span asp-validation-for="Introduction" class="text-danger small"></span>
                                <span class="text-muted small">Max 2000 characters</span>
                            </div>
                        </div>

                        <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mt-4">
                            <a asp-controller="Jobs"
                               asp-action="Details"
                               asp-route-id="@Model.JobId"
                               class="btn btn-outline-secondary">
                                ⬅ Back to job detail
                            </a>

                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                Submit application
                            </button>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-muted small mt-3">
                Tip: Make sure your email is correct so the employer can contact you.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
    
        (function () {
            const form = document.getElementById('applyForm');
            const btn = document.getElementById('submitBtn');
            if (!form || !btn) return;

            form.addEventListener('submit', function () {
               
                if (form.checkValidity && !form.checkValidity()) return;

                btn.disabled = true;
                btn.innerText = 'Submitting...';
            });
        })();
    </script>
}

@model IEnumerable<WebApplication2.Models.Job>

@{
    ViewData["Title"] = "Job Listings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Job Listings</h2>
        <a asp-action="Create" class="btn btn-success">
            ➕ Post New Job
        </a>
    </div>

    <form method="get" asp-action="Index" class="row g-2 mb-4">
        <div class="col-md-4">
            <input type="text" name="searchString" class="form-control"
                   placeholder="Search by job title or location..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            There are currently no job postings.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var job in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@job.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@job.EmployerName</h6>
                            <p class="mb-1">
                                📍 @job.Location
                            </p>
                            <p class="mb-1">
                                🏷️ @job.Category
                            </p>
                            <p class="small text-muted mb-2">
                                Deadline: @job.Deadline.ToShortDateString()
                            </p>
                            <p class="card-text flex-grow-1">
                                @((job.Description?.Length ?? 0) > 120
                                                        ? job.Description.Substring(0, 120) + "..."
                                                        : job.Description)
                    </p>

                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@job.Id"
                                   class="btn btn-outline-primary btn-sm me-2">
                                    View details
                                </a>
                                <a asp-action="Apply" asp-route-id="@job.Id"
                                   class="btn btn-primary btn-sm">
                                    Apply now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
        </div>
    }
</div>

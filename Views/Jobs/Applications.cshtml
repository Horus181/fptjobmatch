@using WebApplication2.Models
@model IEnumerable<JobApplication>

@{
    ViewData["Title"] = "Job applications";
}

<div class="container mt-4">
    <h2>Job applications</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-3">
            There are currently no applications for this job.
        </div>
    }
    else
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Applicant name</th>
                    <th>Email</th>
                    <th>Introduction</th>
                    <th>Applied at</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                        <td>@app.ApplicantName</td>
                        <td>@app.ApplicantEmail</td>
                        <td>
                            @{
                                var intro = string.IsNullOrWhiteSpace(app.Introduction)
                                ? "-"
                                : (app.Introduction!.Length > 80
                                ? app.Introduction.Substring(0, 80) + "..."
                                : app.Introduction);
                            }
                            @intro
                        </td>
                        <td>@app.AppliedAt</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

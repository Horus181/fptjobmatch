@model List<WebApplication2.Models.JobApplication>
@using WebApplication2.Models

@{
    ViewData["Title"] = "Candidates";
}

<div class="container mt-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <h2 class="mb-0">Candidates (Applications)</h2>

        @if (TempData["EmployerMessage"] is string emsg)
        {
            <span class="badge bg-info text-dark p-2">@emsg</span>
        }
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Chưa có ứng viên nào apply vào các job của bạn.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var a in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">

                            <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
                                <div>
                                    <div class="fw-semibold fs-5">@a.ApplicantName</div>
                                    <div class="text-muted">@a.ApplicantEmail</div>
                                    <div class="mt-2">
                                        <span class="text-muted small">Applied:</span>
                                        <span class="small">@a.AppliedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <div class="mb-2">
                                        @switch (a.Status)
                                        {
                                            case ApplicationStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case ApplicationStatus.Approved:
                                                <span class="badge bg-success">Accepted</span>
                                                break;
                                            case ApplicationStatus.Rejected:
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@a.Status</span>
                                                break;
                                        }
                                    </div>

                                    <div class="small text-muted">
                                        Job: <span class="fw-semibold">@a.Job?.Title</span>
                                    </div>
                                </div>
                            </div>

                            <hr />

                            <div class="mb-3">
                                <div class="fw-semibold mb-1">Introduction</div>
                                <div class="text-muted" style="white-space: pre-wrap;">
                                    @(a.Introduction ?? "")
                                </div>
                            </div>

                            <div class="d-flex flex-wrap gap-2 justify-content-end">
                                <a asp-controller="Jobs"
                                   asp-action="Details"
                                   asp-route-id="@a.JobId"
                                   class="btn btn-sm btn-outline-secondary">
                                    View job
                                </a>

                                @if (a.Status == ApplicationStatus.Pending)
                                {
                                    <form asp-controller="Jobs"
                                          asp-action="ApproveApplication"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@a.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            Accept
                                        </button>
                                    </form>

                                    <form asp-controller="Jobs"
                                          asp-action="RejectApplication"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@a.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Reject
                                        </button>
                                    </form>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
